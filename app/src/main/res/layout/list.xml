<!-- list.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/backround_shape"
    android:gravity="center_horizontal"> <!-- Menambahkan gravity untuk membuat teks berada di tengah secara horizontal -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tombol_tambah"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="ID"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" /> <!-- Tambahkan margin bottom untuk spasi -->

    <TextView
        android:id="@+id/nik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="NIK"
        android:textColor="#000000"
        android:textSize="20dp" /> <!-- Tambahkan margin bottom untuk spasi -->

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Nama"
        android:textColor="#000000"
        android:textSize="20dp" /> <!-- Tambahkan margin bottom untuk spasi -->

    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Alamat"
        android:textColor="#000000"
        android:textSize="20dp" /> <!-- Tambahkan margin bottom untuk spasi -->

    <TextView
        android:id="@+id/kota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Kota"
        android:textColor="#000000"
        android:textSize="20dp" />

</LinearLayout>
